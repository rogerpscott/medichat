<div class="perfil">
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-7">
        <div id="background-form">

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

            <div class=" row form-inputs">
              <div class="col-md-9 box-register">
                <div class="bg-white">
                  <div><h2>Cambiar mi correo y contraseña</h2></div>
                  <%= f.input :email, label: "Correo", required: true, autofocus: true %>

                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                  <% end %>

                  <%= f.input :password, label: "Nueva contraseña", autocomplete: "off", hint: "Si no lo quieres cambiar dejalo vacio", required: false %>
                  <%= f.input :password_confirmation, label: "Confirmar nueva contraseña", required: false %>
                  <%= f.input :current_password, label: "Contraseña actual", hint: "necesitamos tu contraseña actual para confirmar los cambios", required: true %>
                  <div class="form-actions">
                    <%= f.button :submit, "Actualizar" %>
                  </div>
                </div>
                <div class="clearfix"></div>
              <% end %>
            </div>
          </div>
          <%= link_to "Back", :back %>
        </div>
      </div>
    </div>
  </div>
</div>


<%= render partial: 'pages/footer' %>

